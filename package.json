{
  "name": "sheikh-termux",
  "version": "1.0.0",
  "type": "module",
  "description": "Agentic coding tool for Termux and terminal environments. Extensible MCP support, built-in tools for file operations, shell commands, and web fetching.",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "bin": {
    "sheikh": "./dist/index.js"
  },
  "scripts": {
    "build": "esbuild src/index.tsx --bundle --platform=node --outfile=dist/index.js --external:react --external:react-dom --external:ink --format=esm",
    "start": "node dist/index.js",
    "dev": "node --import tsx src/index.tsx"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@opencode-ai/sdk": "latest",
    "ink": "^6.7.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "shelljs": "^0.10.0",
    "zx": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/shelljs": "^0.10.0",
    "esbuild": "^0.27.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
